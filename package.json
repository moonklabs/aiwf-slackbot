{
  "name": "claude-gemini-slackbot",
  "version": "1.0.0",
  "description": "원격 Claude Code 및 Gemini CLI 실행을 위한 Slack 봇",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "dev:mcp": "NODE_ENV=development MCP_ENABLED=true tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "keywords": [
    "slack",
    "bot",
    "claude-code",
    "gemini",
    "remote-execution"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@slack/bolt": "^3.17.1",
    "@slack/web-api": "^7.0.1",
    "@types/eventsource": "^1.1.15",
    "dotenv": "^16.4.1",
    "eventsource": "^4.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
