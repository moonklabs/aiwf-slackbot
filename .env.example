# Slack 봇 설정
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# 포트 설정 (선택사항)
PORT=3000

# 로그 레벨 (debug, info, warn, error)
LOG_LEVEL=info

# Claude Code 실행 경로 (선택사항, 기본값: claude)
CLAUDE_CODE_PATH=claude

# Gemini CLI 실행 경로 (선택사항, 기본값: gemini)
GEMINI_CLI_PATH=gemini

# 작업 디렉토리 (선택사항, 기본값: ./workspace)
WORKSPACE_DIR=./workspace

# 명령어 실행 타임아웃 (밀리초, 기본값: 600000 = 10분)
COMMAND_TIMEOUT=600000

# 환경 설정 (development, production)
NODE_ENV=development

# MCP (Model Context Protocol) 설정 (선택사항)
MCP_ENABLED=false
MCP_PORT=3001
MCP_SERVER_URL=http://localhost:3001